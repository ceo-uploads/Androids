<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/storyImg"
        android:layout_width="@dimen/_130mdp"
        android:layout_height="@dimen/_85mdp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/storyone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:riv_border_color="#333333"
        app:riv_border_width="2dip"
        app:riv_corner_radius="10dip"
        app:riv_mutate_background="true" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/profile_image_rv"
        app:layout_constraintEnd_toEndOf="@id/profile_image_rv"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="@id/profile_image_rv"
        app:layout_constraintTop_toTopOf="@id/profile_image_rv"
        app:layout_constraintVertical_bias="0.516" />

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_border"
        app:layout_constraintBottom_toBottomOf="@id/profile_image_rv"
        app:layout_constraintEnd_toEndOf="@id/profile_image_rv"
        app:layout_constraintStart_toStartOf="@id/profile_image_rv"
        app:layout_constraintTop_toTopOf="@id/profile_image_rv" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_rv"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="@id/storyImg"
        app:layout_constraintTop_toTopOf="@id/storyImg" />

    <ImageView
        android:id="@+id/story_type"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="@id/storyImg"
        app:layout_constraintTop_toTopOf="@id/storyImg"
        app:srcCompat="@drawable/live_icon" />

    <TextView
        android:id="@+id/profile_name_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:text="Unreal_Studio"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/storyImg"
        app:layout_constraintStart_toStartOf="@id/storyImg" />

</androidx.constraintlayout.widget.ConstraintLayout>